/ {
    chosen {
        zmk,kscan = &default_kscan;
    };

    default_kscan: kscan {
        compatible = "zmk,kscan-composite";
        rows = <&kscan0>;
        columns = <&kscan0>;
    };
};

&default_transform {
    col-offset = <21>;
};

/ {
    delete-node: split_inputs;
};

&trackball_peripheral_split {
    status = "disabled";
};

&trackball_peripheral_listener {
    status = "disabled";
};

&trackball_central_listener {
    status = "disabled";
};
